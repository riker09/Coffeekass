rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function authenticated () {
      return request.auth != null;
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /product/{document=**} {
      allow read: if true;
      allow write: if authenticated()
    }

    match /person/{document=**} {
      allow read: if true;
    }
  }
}